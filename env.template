# Telegram Network Nurturing Agent - Environment Variables Template
# Copy this file to .env and fill in your values

# REQUIRED
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
AIRTABLE_PAT=your_personal_access_token
AIRTABLE_BASE_ID=your_base_id
AIRTABLE_CONTACTS_TABLE=Contacts
AIRTABLE_MATCHES_TABLE=Matches
AIRTABLE_DRAFTS_TABLE=Drafts
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# OPTIONAL
GEMINI_API_KEY=your_gemini_api_key_here
BOT_NAME=NetworkNurturingBot
DEBUG_MODE=false
LOG_LEVEL=INFO
ANALYTICS_DB_PATH=logs/analytics.db
ANALYTICS_ENABLED=true
AUTO_ENRICH_ENABLED=true
AUTO_CLASSIFY_ENABLED=true
VOICE_TRANSCRIPTION_ENABLED=true
IMAGE_OCR_ENABLED=true
EMAIL_ENABLED=true

# SMTP EMAIL CONFIGURATION
# For Gmail: Use smtp.gmail.com:587 with an App Password (not your regular password)
# For Outlook: Use smtp.office365.com:587
# For SendGrid: Use smtp.sendgrid.net:587 with API key as password
# For AWS SES: Use email-smtp.{region}.amazonaws.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=Network Nurturing Agent
SMTP_USE_TLS=true
SMTP_USE_SSL=false

